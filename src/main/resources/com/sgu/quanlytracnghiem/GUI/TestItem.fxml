<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="100.0" prefWidth="600.0" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Tiêu đề và trạng thái -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="lblTitle" text="Test 1" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="lblStatus" text="Đã mở" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: green;" />
        </HBox>
    </top>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="5">
            <HBox spacing="20">
                <Label text="Thời gian làm bài:" style="-fx-font-size: 16px;" />
                <Label fx:id="lblTime" text="10" style="-fx-font-size: 16px;" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label text="Số lần làm bài:" style="-fx-font-size: 16px;" />
                <Label fx:id="lblLimit" text="10" style="-fx-font-size: 16px;" />
            </HBox>

            <HBox spacing="20">
                <Label text="Ngày kiểm tra:" style="-fx-font-size: 16px;" />
                <Label fx:id="lblDate" text="2025-03-11" style="-fx-font-size: 16px;" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label text="Dễ:" style="-fx-font-size: 16px; -fx-text-fill: #15ff00;" />
                <Label fx:id="lblEasy" text="30" style="-fx-font-size: 16px;" />
                <Label text="Vừa:" style="-fx-font-size: 16px; -fx-text-fill: #ffcc00;" />
                <Label fx:id="lblMedium" text="30" style="-fx-font-size: 16px;" />
                <Label text="Khó:" style="-fx-font-size: 16px; -fx-text-fill: red;" />
                <Label fx:id="lblDiff" text="30" style="-fx-font-size: 16px;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
