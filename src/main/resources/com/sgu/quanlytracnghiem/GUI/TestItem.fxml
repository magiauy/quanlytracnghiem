<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="100.0" prefWidth="600.0" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Tiêu đề và trạng thái -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="lblTitle" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Test 1" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="lblStatus" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: green;" text="Đã mở">
            <font>
               <Font name="System Bold" size="15.0" />
            </font></Label>
        </HBox>
    </top>

    <!-- Nội dung chính -->
    <center>
        <VBox spacing="5">
            <HBox spacing="20">
                <Label style="-fx-font-size: 16px;" text="Thời gian làm bài:" />
                <Label fx:id="lblTime" style="-fx-font-size: 16px;" text="10" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-font-size: 16px;" text="Số lần làm bài:" />
                <Label fx:id="lblLimit" style="-fx-font-size: 16px;" text="10" />
            </HBox>

            <HBox spacing="20">
                <Label style="-fx-font-size: 16px;" text="Ngày kiểm tra:" />
                <Label fx:id="lblDate" style="-fx-font-size: 16px;" text="2025-03-11" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: green;" text="Dễ:" />
                <Label fx:id="lblEasy" style="-fx-font-size: 16px;" text="30" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: #ffcc00;" text="Vừa:" />
                <Label fx:id="lblMedium" style="-fx-font-size: 16px;" text="30" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: red;" text="Khó:" />
                <Label fx:id="lblDiff" style="-fx-font-size: 16px;" text="30" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
