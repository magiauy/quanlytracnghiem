<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sgu.quanlytracnghiem.GUI.ChoiceTopicController">
   <children>
      <VBox alignment="CENTER" prefHeight="422.0" prefWidth="400.0" spacing="10">
          <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Chọn Topic" />
      
          <TextField fx:id="searchField" maxWidth="300" promptText="Tìm kiếm..." />
      
          <TableView fx:id="topicTable" maxHeight="300" maxWidth="400">
              <columns>
                  <TableColumn fx:id="colTpID" prefWidth="100" text="tpID" />
                  <TableColumn fx:id="colTpTitle" prefWidth="300" text="tpTitle" />
              </columns>
          </TableView>
      
          <Button fx:id="btnOK" maxWidth="100" text="OK" />
      </VBox>
   </children>
</AnchorPane>
